                            </div>
                        </div>
                    </div>

                    <div class="text-center fw-bold" style="color:red; font-size:14px">
                        @ViewBag.ResultadoVerificacion

                    </div>

                    <hr class="my-2" />

                    <div class="text-center">
                        <a class="btn btn-secondary fw-bold my-1" asp-action="LoginPage" asp-controller="Usuario">Cancelar</a>
                        <button type="submit" class="btn btn-dark my-1 fw-bold">Verificar código</button>
                    </div>
                    
                    <hr class="my-2" />
                    
