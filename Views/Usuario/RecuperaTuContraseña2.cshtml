    </div>
</div>





<script>
    document.getElementById('codigoIngresado').addEventListener('input', function () {
        var input = this.value;
        // Regexp para aceptar solo nums
        var regex = /^\d{0,6}$/;
        if (!regex.test(input)) {
            this.value = input.substring(0, input.length - 1);
        }
    });

    document.getElementById('codigoIngresado').addEventListener('paste', function (event) {
        var pastedText = (event.clipboardData || window.clipboardData).getData('text');

        var numericText = pastedText.replace(/\D/g, '');
        if (numericText.length > 6) {

            numericText = numericText.substring(0, 6);
        }
        this.value = numericText;
        event.preventDefault();
    });

</script>