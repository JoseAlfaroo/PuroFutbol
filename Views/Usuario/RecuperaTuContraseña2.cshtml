                <hr class="my-4 text-dark" />
                <form asp-action="RecuperaTuContraseña2" asp-controller="Usuario" method="POST">
                    <div class="row row-space">
                        <div class="col-12">
                            <div class="input-group mb-3">
                                <label class="pb-2" style="font-size: 14px">Se ha enviado un código a <span class="fw-bold">"@ViewBag.Email"</span>, ingrese el código para continuar:</label>
