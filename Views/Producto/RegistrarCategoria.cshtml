@model IEnumerable<Ecommerce_2024_1_NJD.Models.Producto>


@{
    Layout = "_LayoutDashboard";
}

@{
    ViewData["Title"] = "Registrar Categoría";
}

<h3 class="text-center py-3 text-light" style="background-color: rgb(47 47 47);">
    <span class="material-icons-outlined">category</span>&nbsp;Categorías
</h3>

<div class="w-95 mx-auto">
    <p>
        <a asp-action="ListarCategorias" class="btn btn-dark">Ver categorias</a>
    </p>
</div>

<div class="w-95 mx-auto">
    <hr class="text-dark">
</div>

<div>
    <div class="w-95 mx-auto text-dark">
        <div class="row">
            <form method="post" id="formRegistrarCategoria">
                <div class="form-group mb-4">
                    <label for="nombreCategoria" class="fw-bold">Nombre de la Categoría:</label>
                    <input type="text" class="form-control" id="nombreCategoria" name="nombreCategoria" required>
                </div>

                <div class="form-group mb-4">
                    <label for="descripcion" class="fw-bold">Descripción:</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="5" style="resize:none"></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary fw-bold">Registrar</button>
                </div>
                
            </form>
            <div class="mt-3">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-info" role="alert">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>
