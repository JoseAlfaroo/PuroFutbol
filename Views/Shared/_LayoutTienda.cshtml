            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img style="max-height:52px;" class="mw-100" src="https://i.ibb.co/R2z2yVx/PUROFUTBOL-LOGO-PNG.png">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-dark"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between px-3" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Portal", "ECommerce")">
                                <i class="fa fa-shopping-bag"></i>
                                Portal
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-tags" aria-hidden="true"></i>
                                Categorías
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1000 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
                                        Futbol
                                    </a>
                                </li>
                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1001 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
                                        Running
                                    </a>
                                </li>
                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1002 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
                                        Gimnasio
                                    </a>
                                </li>

                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1003 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
                                        Calzado
                                    </a>
                                </li>

                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1004 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
                                        Hombres
                                    </a>
                                </li>

                                <li class="dropdown-item">
                                    <a class="nav-link" href="@Url.Action("FiltrarPorCategoria", "ECommerce", new { idCategoria = 1005 })">
                                        <i class="fa fa-tag" aria-hidden="true"></i>&nbsp;
