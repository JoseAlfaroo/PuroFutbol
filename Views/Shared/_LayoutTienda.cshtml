                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                                -->
                            </ul>
                        </li>

                    </ul>
                    
                    <form class="d-flex" role="search" method="get" action="@Url.Action("BuscarProductoPorNombre", "ECommerce")">
                        <input value="@ViewBag.Busqueda" class="form-control me-2" name="nombreProducto" type="search" placeholder="Buscar" aria-label="Search">
                        <button class="btn btn-dark" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewData["IdUsuario"]?.ToString()) && !string.IsNullOrEmpty(ViewData["FullName"]?.ToString()))
                    {
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Resumen" asp-controller="ECommerce">
                                    <i class="fa fa-shopping-cart"></i>
                                    Carrito (@(ViewData["CantidadProdCr"] ?? "0"))
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user-circle" aria-hidden="true"></i>
                                    @ViewData["FullName"]
                                </a>

                                <ul class="dropdown-menu">
                                    <li class="dropdown-item">
