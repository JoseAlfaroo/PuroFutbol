
@model Ecommerce_2024_1_NJD.Models.UsuarioRegPedido

@{
    Layout = "_LayoutTienda";
}

@{
    ViewData["Title"] = "Realizar Pedido";
}

<style>
    body {
        background-color: #EEEEEE;
    }
</style>

